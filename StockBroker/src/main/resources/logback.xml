<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <Pattern>
        %yellow(%d){HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n
      </Pattern>
    </encoder>
  </appender>

  <logger name="io.netty" level="warn" />
  <logger name="io.vertx" level="info" />

  <root level="debug">
    <appender-ref ref="STDOUT"/>
  </root>

</configuration>
